<div class="short_holder">
	<div class="title_date">
    	<div class="title_hold">
        	<div class="title_bottom">
                <h4>[full-link]{title}[/full-link]</h4>
                <div class="short_rating">
                    {rating}
                </div>
            </div>
        </div>
        <div class="date_holder">
        	{date=d} <p>{date=F}</p>
        </div>
    </div>
    <div class="short_sub">
    	<ul>
        	<li><span>Добавил: {author}</span></li>
        	<li><span>Просмотров: {views}</span></li>
        	<li><span>[com-link]Комментариев: {comments-num}[/com-link]</span></li>
        </ul>
        <div class="cat_name">
        	Новости
        </div>
    </div>
    <div class="short_body">
        {short-story}
    </div>
	[tags]<div class="tag_holder">
    	{tags}
    </div>[/tags]
</div>